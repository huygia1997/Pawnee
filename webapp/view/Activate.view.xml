<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Activate" displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Page class="menuBackground" title="{i18n>register_account}" busyIndicatorDelay="0" showFooter="false" showSubHeader="false">
		<content>
			<VBox height="100%" alignItems="Center" justifyContent="Center">
				<HBox width="{= ${device>/system/phone} ? '100%' : '400px'}" justifyContent="Center" fitContainer="true" height="100%" alignItems="Start"
					direction="Column">
					<items>
						<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0">
							<sap.ui.layout.form:content>
									<Image src="images/logo.jpg" width="100%"/>
									<Title id="text_activate" text="{activateModel>/text}" class="title_activate" />
									<Button class="btn_THR_login" width="100%" text="{i18n>backHome}" press="backToHome" id="_btnSubmit"/>
							</sap.ui.layout.form:content>
						</sap.ui.layout.form:SimpleForm>
					</items>
				</HBox>
			</VBox>
		</content>
	</Page>
</mvc:View>